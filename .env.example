# Ambiente
NODE_ENV=development
PORT=3000

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/cryptotext
MONGODB_URI_PROD=mongodb+srv://<username>:<password>@cluster0.railway.app/cryptotext

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_ID_PRO=price_xxxxxxxxxxxxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxxxxxxxxxxxx

# Email
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@cryptotext.com
FROM_NAME=CryptoText

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Railway Specific
RAILWAY_STATIC_URL=
RAILWAY_ENVIRONMENT=
RAILWAY_PROJECT_ID=
RAILWAY_PROJECT_NAME=

